@model Rhythmify.Models.User

<style>
    body {
        margin-bottom: 60px;
        background-color: #cf8955;
        background-size: 100%;
    }
</style>
<h2 class="text-center mt-5">Adaugare conversatie</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Conversations",
           method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("DisplayName", "Display name-ul cautat")
                <br />
                @Html.TextBox("DisplayName", null, new { @class = "form-control" })
                <br /><br />

                <button class="btn btn-success" type="submit">Creeaza conversatie</button>

            }

        </div>
    </div>
</div>







