@model Rhythmify.Models.User
@{
    ViewBag.Title = "New Conversation";
}

<h2 class="text-center mt-5">New Conversation</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Conversations",
           method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Username", "Username-ul cautat")
                <br />
                @Html.TextBox("Username", null, new { @class = "form-control" })
                <br /><br />

                <button class="btn btn-success" type="submit">Create</button>

            }

        </div>
    </div>
</div>







