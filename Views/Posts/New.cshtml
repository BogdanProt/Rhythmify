@model Rhythmify.Models.Post

@{
    ViewBag.Title = "New Playlist";
}

<h2 class="text-center mt-5">Add Post</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @using (Html.BeginForm(actionName: "New", controllerName: "Posts"))
            {

                @Html.Label("Content", "Content")

                <br />

                @Html.TextArea("Content", null, new { @class = "form-control" })

                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                <br /><br />

                <button class="btn btn-success" type="submit">Add Post</button>
            }
        </div>
    </div>
</div>







