@model Rhythmify.Models.Post

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center mt-5">Edit Post</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts", routeValues: new { id = Model.Id }))
            {

                <br />

                @Html.Label("Content", "Content")

                <br />

                @Html.TextArea("Content", null, new { @class = "form-control" })

                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                <br />

                <br />

                <br />

                <button class="btn btn-success" type="submit">Add post</button>
            }
        </div>
    </div>
</div>



