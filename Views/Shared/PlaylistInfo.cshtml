<div class="card mb-4 shadow-sm">
    <div class="card-header text-white bg-primary">
        <h3 class="card-title mb-0">
            @Model.Title
        </h3>
    </div>
    <div class="card-body">
        <p class="card-text">@Model.Description</p>
        <a href="@Url.Action("Show", "Playlists", new { id = Model.Id })" class="btn btn-outline-primary mt-3">View Playlist</a>
    </div>
</div>
