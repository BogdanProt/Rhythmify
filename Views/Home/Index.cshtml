@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-white text-center" style="background: url('/images/Music.jpg') no-repeat center center; background-size: cover; padding: 100px 0;">
    <div class="container">
        <h1 class="display-4">Welcome to Rhythmify!</h1>
        <h4 class="display-6">The Social App for Sharing Music</h4>
        <p class="lead mt-4">Discover new music, share your favorites, and connect with friends.</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg mt-3">Join Now</a>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-music fa-3x mb-3"></i>
                    <h4>Discover Music</h4>
                    <p>Find new songs and artists that match your taste.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-share-alt fa-3x mb-3"></i>
                    <h4>Share Your Favorites</h4>
                    <p>Share your favorite tracks and playlists with your friends.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h4>Connect with Friends</h4>
                    <p>Follow your friends and see what they're listening to.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="call-to-action-section py-5 text-white text-center" style="background-color: #343a40;">
    <div class="container">
        <h2>Ready to Join Rhythmify?</h2>
        <p class="lead">Sign up now and start sharing your favorite music!</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg">Sign Up</a>
    </div>
</div>
